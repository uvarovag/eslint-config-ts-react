{
    "name": "@uvarovag/eslint-config-ts-react",
    "version": "2.4.0",
    "description": "Shared ESLint 9 Flat configuration for TypeScript React projects",
    "main": "eslint.config.js",
    "type": "module",
    "scripts": {
        "fix": "prettier --write '**/*.{ts,tsx,js,json,css,html,md}'",
        "deploy": "npm publish",
        "prepare": "husky"
    },
    "keywords": [
        "eslint",
        "eslint-config",
        "code-style",
        "formatting",
        "shared-config",
        "coding-standards"
    ],
    "author": "@uvarovag",
    "license": "MIT",
    "homepage": "https://github.com/uvarovag/eslint-config-ts-react/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/uvarovag/eslint-config-ts-react.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@uvarovag/eslint-config-ts": "^1.4.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.19"
    },
    "devDependencies": {
        "@uvarovag/prettier-config": "^1.0.6",
        "husky": "^9.1.7",
        "prettier": "^3.4.1"
    },
    "peerDependencies": {
        "eslint": "^9.20.1"
    }
}
